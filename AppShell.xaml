<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MoodTrackerByKirill.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MoodTrackerByKirill.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>

        <Tab Title="My Day" Icon="house_regular_full.svg">
            <ShellContent
                    Title="My Day"
                    ContentTemplate="{DataTemplate views:MyMoodPage}"
                    Route="MyMoodPage" />
        </Tab>

        <Tab Title="Feed" Icon="newspaper_regular_full.svg">
            <ShellContent
                    Title="Friends Feed"
                    ContentTemplate="{DataTemplate views:FriendsFeedPage}"
                    Route="FriendsFeedPage" />
        </Tab>

        <Tab Title="Settings" Icon="screwdriver_wrench_solid_full.svg">
            <ShellContent
                    Title="Settings"
                    ContentTemplate="{DataTemplate views:ManageFriendsPage}"
                    Route="ManageFriendsPage" />
        </Tab>

    </TabBar>

</Shell>