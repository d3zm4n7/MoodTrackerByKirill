<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MoodTrackerByKirill.ViewModels"
             xmlns:models="clr-namespace:MoodTrackerByKirill.Models"
             x:DataType="vm:ManageFriendsViewModel"
             x:Class="MoodTrackerByKirill.Views.ManageFriendsPage"
             Title="Настройки">

    <VerticalStackLayout Padding="10">

        <TableView Intent="Form">
            <TableRoot>
                <TableSection Title="Add new friend">
                    <EntryCell Label="Name:"
                               Placeholder="Enter friend name"
                               Text="{Binding NewFriendName}" />
                </TableSection>
                
                <TableSection Title="Settings">

                    <SwitchCell Text="Enable notifications"
                                On="True" />
                    <ImageCell Text="App version"
                                 Detail="1.0.0"
                                 ImageSource="chart_bar_regular_full.png" />
                </TableSection>
                
            </TableRoot>
        </TableView>

        <Button Text="Add Friend"
                CornerRadius="10"
                Margin="10"
                HorizontalOptions="Fill"
                Command="{Binding AddFriendCommand}" />
        <BoxView HeightRequest="1" Color="LightGray" />

        <Label Text="My Friends:"
               FontSize="Large"
               Margin="5,15,0,5" />

        <ListView ItemsSource="{Binding FriendsList}"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Friend">
                    <ViewCell>
                        <Grid Padding="10, 5" ColumnDefinitions="*, Auto">

                            <Label Grid.Column="0"
                                   Text="{Binding Name}"
                                   FontSize="Medium"
                                   VerticalOptions="Center" />

                            <Button Grid.Column="1"
                                    Text="🗑️"  
                                    BackgroundColor="Transparent"
                                    BorderColor="Transparent"
                                    TextColor="Red"
                                    FontSize="Medium"
                                    VerticalOptions="Center"
                                    HorizontalOptions="End"
                                    WidthRequest="60"
                                    HeightRequest="40"
                                    
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ManageFriendsViewModel}}, Path=DeleteFriendCommand}"
                                    
                                    CommandParameter="{Binding .}" />

                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>